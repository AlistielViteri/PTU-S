{{#each actor.effects as |effect|}}
<div class="swsh-box mb-2 w-100">
    <div class="swsh-header pl-2">
        <h3>{{effect.label}}</h3>
    </div>
    <div class="swsh-body w-100">
        <ol class="inventory-list">
            <li class="inventory-header flexrow" style="background: linear-gradient(45deg, #ffffffbb, #fff, #ffffffbb); border-radius: 5px;">
            <div class="item-name flexcol align-items-center align-self-center" style="flex: 1 0 12%;">
                <h4>Target</h4>
            </div>
            <div class="item-name flexcol align-items-center align-self-center" style="flex: 1 0 8%;">
                <h4>Value</h4>
            </div>
            <div class="item-name flexcol align-items-center align-self-center" style="flex: 1 0 7%;">
                <h4>Mode</h4>
            </div>
            <div class="item-name flexcol align-items-center align-self-center" style="flex: 1 0 5%;">
                <h4>Priority</h4>
            </div>
            <div class="item-controls flexcol" style="flex: 0 0 5%;">
                {{!-- <a class="item-control item-create" title="Add Change" data-type="change"><i
                    class="fas fa-plus-circle" style="margin-right: 3px;"></i><span
                    class="readable">Add</span></a> --}}
            </div>
            </li>
            <ol class="item-list">
            {{#each effect.changes as | change |}}
            <li class="item flexrow" data-item-id="{{move._id}}">
                <div class="item-name flexcol align-items-center align-self-center" style="flex: 1 0 12%;">
                <h4> 
                    {{change.key}}
                </h4>
                </div>
                <div class="item-name flexcol align-items-center align-self-center" style="flex: 1 0 8%;">
                    <span class="readable pokemon p8 tight">{{change.value}}</span>
                </div>
                <div class="item-name flexcol align-items-center align-self-center" style="flex: 1 0 7%;">
                    <span class="readable pokemon p8 tight">{{change.mode}}</span>
                </div>
                <div class="item-name flexcol align-items-center align-self-center" style="flex: 1 0 5%;">
                    <span class="readable pokemon p8 tight">{{change.priority}}</span>
                </div>
                <div class="item-controls" style="flex: 0 0 5%; justify-content: center; display:flex;">
                    {{!-- <a class="item-control item-edit" title="Edit effect"><i class="fas fa-edit"></i></a>
                    <a class="item-control item-delete" title="Delete effect"><i class="fas fa-trash"></i></a> --}}
                </div>
            </li>
            {{/each}}
            </ol>
        </ol>
    </div>
</div>
{{/each}}

