<div class="row m-0 p-0">
    <button type="button" class="movemaster-button" data-button="{{_id}}">
        <div class="btn-body efc {{getEffectivenessColor data.effectiveness}}" >
            <h3>
                <!-- Move Name -->
                <div class="pt-2 pb-1" {{!-- style="padding-top:5px;" --}} title="{{data.effect}}">
                    {{name}}
                </div>
                <!-- Frequency -->
                <img src="{{calcFrequencyIconPath data.frequency '0'}}" title="{{data.frequency}} ({{'0'}} Remaining)"
                    style="border-width: 0;">
            </h3>
            <!-- Other Icons (to be done) -->
            <div class="d-flex icon-list">
                {{{data.rangeIconsHtml}}}
                {{#unless (is data.effectiveness "-1")}}
                    <span style="font-size:30px">
                        / x {{data.effectiveness}}
                    </span>
                {{/unless}}
            </div>
        </div>
    </button>
</div>