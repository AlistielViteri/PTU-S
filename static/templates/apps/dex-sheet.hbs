<form class="{{cssClass}} d-flex flex-column container-fluid" autocomplete="off">
    <div class="header d-flex flex-row justify-content-center swsh-box">
        <div class="fb-48 d-flex flex-row">
            <div class="fb-40 swsh-header d-flex flex-column">
                <div class="header-label"><span>Search</span></div>
                <div class="header-label"><span>Hide Unknown</span></div>
                <div class="header-label"><span>Hide Seen</span></div>
                <div class="header-label"><span>Hide Owned</span></div>
            </div>
            <div class="fb-60 swsh-body d-flex flex-column">
                <div class="header-item">
                    <input type="text" class="form-control" placeholder="Search" name="search" value="{{search}}"/>
                </div>
                <div class="header-item">
                    <input type="checkbox" class="form-check-input" name="hideUnknown" id="hide-unknown" {{checked hideUnknown}}/>
                </div>
                <div class="header-item">
                    <input type="checkbox" class="form-check-input" name="hideSeen" id="hide-seen" {{checked hideSeen}}/>
                </div>
                <div class="header-item">
                    <input type="checkbox" class="form-check-input" name="hideOwned" id="hide-owned" {{checked hideOwned}}/>
                </div>
            </div>
        </div>
        <div class="fb-48 help-text">
            <span class="help-text mb-1">You can left click a Pokemon to mark it from Unknown to Seen, or Seen to Owned</span>
            <span class="help-text">You can right click a Pokemon to mark it from Owned to Seen, or Seen to Unknown</span>
        </div>
    {{!-- <div class="header d-flex flex-row justify-content-center swsh-box"> --}}
