<section class="damage-taken">
    <span class="statements">{{{statements}}}</span>
    {{#if iwr.applications}}
        <span class="iwr" data-visibility="{{iwr.visibility}}" data-applications="{{json iwr.applications}}"><i class="fas fa-info-circle small"></i></span>
    {{/if}}
    {{#if canUndoDamage}}
        <span class="buttons">
            <button class="button" type="button" class="revert-damage" data-action="revert-damage" data-title="PTU.ApplyDamage.Revert"><i class="fa-solid fa-rotate-left"></i></button>
        </span>
    {{/if}}
</section>
