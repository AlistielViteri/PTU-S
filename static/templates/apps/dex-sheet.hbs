    </div>
    {{#if dex.selected.length}}
        <div class="dex-grid">
            {{#each dex.selected}}
                <div class="dex-item{{#if this.seen}} seen{{/if}}{{#if this.owned}} owned{{/if}}" data-id="{{this.id}}">
                    <span class="dex-item-img"><img src="{{this.img}}"/></span>
                    <div class="dex-item-name">{{#if (or this.seen this.owned)}}{{this.name}}{{else}}???{{/if}}</div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <div class="d-flex justify-content-center h-100">
            <div class="help-text" style="align-self: center;">
                {{#if search}}
                    <span class="help-text">No results found for "{{search}}"</span>
                {{else}}
                <span class="help-text">Loading dex...</span>
                {{/if}}
            </div>
        </div>
    {{/if}}
</form>